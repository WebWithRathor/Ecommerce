<% include ./partials/header.ejs %>


    <!-- Product Detail Section -->
    <section class="py-12 px-4">
        <div class="container h-[64.5vh]">
            <div class="flex gap-8">
                <div class="flex flex-col flex-wrap gap-4">
                    <% product.images.forEach(function(img){ %>
                        <img src="/images/<%=img%>" alt="Product Image" class="cursor-pointer small-photo object-cover w-[7vw] aspect-square"
                            onclick="changeBigPhoto(this)">
                    <%})%>
                    <!-- Add more small photos as needed -->
                </div>
                <!-- Big Product Photo -->
                <div>
                    <img id="big-photo" src="/images/<%=product.images[0]%>" alt="Product Image"
                        class="big-photo h-[25vw] object-cover rounded">
                </div>

                <div>
                    <h2 class="text-3xl font-semibold mb-4"><%=product.productname%></h2>
                    <p class="text-gray-700 mb-4"><%=product.description%></p>
                    <p class="text-gray-900 font-semibold mb-4">$<%=product.price%></p>
                    <button class="mt-4 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded" onclick="addtocart('<%=product._id%>')">Add to
                        Cart</button>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded mb-4">Buy Now</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 E-Commerce Store. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function changeBigPhoto(smallPhoto) {
            document.getElementById('big-photo').src = smallPhoto.src;
        }
    </script>
    <% include ./partials/cart.ejs %>
</body>

</html>
